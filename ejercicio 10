#include <iostream>

using namespace std;

int invertir (int numero = 0)
{
    int y = 0;
    while(numero != 0)
    {
        y = y*10 + numero % 10;
        numero = numero / 10;
    }
    return y;
}
int main()
{
    char opcion;
    int a = 0;

    cout << "Elija la opcion que desee: " << endl;
    cout << "'A': Invertir numero" << endl;
    cout << "'B': Sumatoria de digitos." << endl;
    cout << "'C': Decir si son multiplos." << endl;
    cout << "'D': Salir " << endl;
    cin >> opcion;
    opcion = toupper(opcion);

    switch(opcion)
    {
     case 'A':
        cout << "Usted eligio la opcion 'A'" << endl;
        cout<< "ingrese un numero: ";
        cin >> a;
        cout<<"el numero invertido es "<< invertir (a) << endl; //invoco a la funciÃ³n INVERTIR
        break;
     case 'B':
        cout<< "";
    default: cout << "opcion incorrecta"<< endl;
    }
    return 0;
}
